@model IEnumerable<BookStore.Models.SACH>
@{
    ViewBag.Title = "SPTheoNXB";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="col-md-8 col-lg-8">
    <h2 style="text-align:center">SÁCH MỚI</h2>
    @foreach (var sach in Model)
    {
        <div class="col-md-6 co l-lg-6">
            <div class="thumbnail" style="height:200px;text-align:center; ">
                <a href="@Url.Action("Details", "Bookstore", new { id = sach.Masach })">
                    <img alt="@sach.Tensach" src="../../img/@sach.Hinhminhhoa" />
                    <div>
                        <br />
                        <h4>@sach.Tensach</h4>
                        <h5>@sach.Dongia</h5>
                    </div>
                </a>
            </div>
        </div>
    }
</div>

